---
import "../styles/global.css";
import Starting from "../assets/Starting.png";
import Escalating from "../assets/Escalating.png";
---

<!-- Hero Section -->
<section
  class="relative overflow-hidden font-poppins bg-light text-dark mb-[5px]"
>
  <!-- Background gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary/5 via-light to-secondary/5 -z-10"
  >
  </div>

  <!-- Floating circles decoration -->
  <div
    class="absolute top-20 left-10 w-16 h-16 rounded-full bg-primary/10 animate-float -z-10"
  >
  </div>
  <div
    class="absolute top-1/3 right-20 w-24 h-24 rounded-full bg-secondary/10 animate-float-reverse -z-10"
  >
  </div>
  <div
    class="absolute bottom-20 left-1/4 w-20 h-20 rounded-full bg-primary/15 animate-float -z-10"
  >
  </div>
  <div
    class="absolute bottom-1/3 right-1/4 w-32 h-32 rounded-full bg-secondary/15 animate-float-reverse -z-10"
  >
  </div>

  <!-- Main content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-[5px]" id="type">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
        <span class="text-gradient">Transform</span> Your Brand's
        <span class="text-gradient">Digital Presence</span>
      </h1>

      <p class="text-lg text-gray-600 mb-8 max-w-lg mx-auto">
        We craft data-driven digital marketing strategies that drive growth,
        engagement, and measurable results for your business.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Left image -->
      <div class="relative animate__animated animate__fadeIn" >
        <div class="relative max-w-md mx-auto scale-[1.1]">
          <a href="./escalate#buttoon">
            <img
              transition:name="Escalate"
              class="rounded-xl shadow-2xl border-8 border-white w-full"
              src={Escalating.src}
              alt="Digital Marketing"
            />
          </a>
        </div>
      </div>

      <!-- Right image -->
      <div class="relative animate__animated animate__fadeIn" id="Grow2">
        <div class="relative max-w-md mx-auto scale-[1.1]">
          <a href="./new#Grow3">
            <img
              transition:name="Grow"
              class="rounded-xl shadow-2xl border-8 border-white w-full"
              src={Starting.src}
              alt="Digital Marketing"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<hr />
